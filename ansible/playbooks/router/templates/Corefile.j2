.:53 {
  bind 10.1.1.1 10.1.2.1 10.1.3.1 10.1.5.1 10.1.6.1 10.255.255.225 10.255.255.1
  errors
  log
  prometheus :9153
  k8s_gateway {{ domain }} {
    ttl 30
    kubeconfig /usr/local/etc/coredns/kubeconfig
    fallthrough
  }
  hosts {
    fallthrough
  }
  forward . tls://1.1.1.1 tls://1.0.0.1 {
    tls_servername cloudflare-dns.com
  }
}
